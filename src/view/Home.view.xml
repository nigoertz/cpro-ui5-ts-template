<mvc:View 
	controllerName="cpro.ui5.__kunde__.__projekt__.controller.Home" 
	displayBlock="true" 
	xmlns="sap.m" 
	xmlns:core="sap.ui.core" 
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:grid="sap.ui.layout.cssgrid"
	xmlns:f="sap.f"
	xmlns:t="sap.tnt">

	<Page backgroundDesign="Transparent">
		
		<customHeader>
			<OverflowToolbar>
				<Image src="assets/logo.jpg" height="30px" />
				<Title text="{i18n>app-title}" />
				<ToolbarSpacer />
				<Button icon="sap-icon://key-user-settings" tooltip="Administration" press="openSettings" />
			</OverflowToolbar>
		</customHeader>
		
		<Panel width="100%" backgroundDesign="Transparent">
			<content>
				<f:GridList id="gridList" items="{/items}">
					<f:GridListItem highlight="{stateColorHightlight}" press="onGridItemPress">
						<HBox class="sapUiSmallMargin" justifyContent="End">
							<t:InfoLabel 
								text="{stateText}" 
								colorScheme="{stateColorInfoLabel}"/>
						</HBox>
						<VBox alignItems="Center" class="sapUiMediumMarginBottom">
							<Button text="{title}" press="onGridItemPress" type="Ghost" icon="{icon}"></Button>
						</VBox>
					</f:GridListItem>
				</f:GridList>
			</content>
		</Panel>

	</Page>
</mvc:View>