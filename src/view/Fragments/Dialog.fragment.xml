<core:FragmentDefinition xmlns:m="sap.m" xmlns:core="sap.ui.core">
    <m:Dialog id="popupDialog" title="{i18n>dialog-text-use-as-setting}">
        <m:HBox justifyContent="Center">
            <m:Button text="{i18n>label-activate}" press="onSavePress" type="Accept" class="sapUiSmallMargin"/>          
            <m:Button text="{i18n>label-cancel}" press="onCancelSavePress" type="Default" class="sapUiSmallMargin"/>
        </m:HBox>
    </m:Dialog>
</core:FragmentDefinition>